RewriteEngine on

RewriteCond %{HTTP_REFERER} !^http://beaskonsult.com/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://beaskonsult.com$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.beaskonsult.com/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.beaskonsult.com$      [NC]
RewriteCond %{HTTP_REFERER} !^https://beaskonsult.com/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://beaskonsult.com$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.beaskonsult.com/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.beaskonsult.com$      [NC]
RewriteRule .*\.(jpg|jpeg|gif|png|bmp)$ - [F,NC]

#Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC, L]

ErrorDocument 404 https://www.beaskonsult.com/404error/404-page-not-found.html

# Caching schema
<FilesMatch "\.(img|css|js)$">
Header set Cache-Control "public, max-age=60"
</FilesMatch>

# Custom 401 errors
ErrorDocument 401 https://beaskonsult.com/

# Custom 403 errors
ErrorDocument 403 https://beaskonsult.com/

# Custom 404 errors
ErrorDocument 404 /404error/404-page-not-found.html

# Prevent viewing of .htaccess file
<Files .htaccess>
order allow,deny
deny from all
</Files>

# Prevent directory listings
Options All -Indexes